<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guest.daughtersofeve.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/backgrnd2"
        android:scaleType="matrix" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/WhiteIconText"
        tools:context="com.example.guest.daughtersofeve.MainActivity">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/loginLogo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:src="@drawable/logo"
            />


        <EditText
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/loginName"
            android:layout_marginTop="350dp"
            android:backgroundTint="@color/GreyLight"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="Enter In Your Name"
            android:textColorHint="@color/GreyLight" />


        <Button
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:text="Login"
            android:id="@+id/loginButton"
            android:layout_below="@+id/loginName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="@color/PinkAccent100"
            android:bottomRightRadius="200dp"
            android:bottomLeftRadius="200dp"
            android:topLeftRadius="200dp"
            android:topRightRadius="200dp"/>

        <Button
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:text="Logout"
            android:id="@+id/logoutButton"
            android:layout_below="@+id/loginButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="@color/PinkAccent100"
            android:bottomRightRadius="200dp"
            android:bottomLeftRadius="200dp"
            android:topLeftRadius="200dp"
            android:topRightRadius="200dp"/>

    </RelativeLayout>

</RelativeLayout>
