<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guest.daughtersofeve.ui.TestimonialActivity">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:id="@+id/imageView"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:src="@drawable/backgrnd2"
    android:scaleType="matrix" />

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:background="@color/WhiteIconText"
    tools:context="com.example.guest.daughtersofeve.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/profileImg"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="-210dp"
        android:src="@drawable/profilepic2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOHN DOE"
        android:id="@+id/profileName"
        android:layout_below="@+id/profileImg"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/PinkAccent100"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOE MEMBER"
        android:id="@+id/profileMemberType"
        android:layout_below="@+id/profileName"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/GreyLight"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/profileName">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EVENT"
            android:layout_marginTop="75dp"
            android:id="@+id/profileAbout"
            android:layout_marginLeft="30dp"
            android:textColor="@color/GreySecondaryText"
            android:textSize="20sp"
            android:letterSpacing="0.2"
            />

        <EditText
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:inputType="textPersonName"
            android:id="@+id/eventText"
            android:backgroundTint="@color/GreyLight"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/GreyLight" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TESTIMONIAL"
            android:layout_marginTop="40dp"
            android:id="@+id/profileAbout"
            android:layout_marginLeft="30dp"
            android:textColor="@color/GreySecondaryText"
            android:textSize="20sp"
            android:letterSpacing="0.2"
            />

        <EditText
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:inputType="textPersonName"
            android:id="@+id/testimonialText"
            android:backgroundTint="@color/GreyLight"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/GreyLight" />


        <Button
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:text="SUBMIT TESTIMONIAL"
            android:id="@+id/testimonialButton"
            android:layout_below="@+id/loginName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="@color/PinkAccent100"/>

    </LinearLayout>



</RelativeLayout>

</RelativeLayout>
