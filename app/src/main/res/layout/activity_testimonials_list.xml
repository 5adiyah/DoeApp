<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guest.daughtersofeve.ui.TestimonialsListActivity">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:id="@+id/imageView"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:src="@drawable/backgrnd2"
    android:scaleType="matrix" />


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:background="@color/WhiteIconText"
    tools:context="com.example.guest.daughtersofeve.MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/profileImg"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="-210dp"
        android:src="@drawable/logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TESTIMONIALS"
        android:id="@+id/profileName"
        android:layout_below="@+id/profileImg"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/PinkAccent100"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAUGHTERS OF EVE"
        android:id="@+id/profileMemberType"
        android:layout_below="@+id/profileName"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/GreyLight"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TESTIMONIAL"
        android:id="@+id/testimonials"
        android:layout_below="@+id/profileMemberType"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/GreySecondaryText"
        android:textSize="18sp"
        android:letterSpacing="0.2"
        />


</RelativeLayout>

</RelativeLayout>
