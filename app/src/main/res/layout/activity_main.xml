    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/WhiteIconText"
        tools:context="com.example.guest.daughtersofeve.MainActivity">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/loginLogo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/logo"
            />


        <EditText
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/loginEmail"
            android:layout_marginTop="250dp"
            android:backgroundTint="@color/Teal100Light"
            android:background="@color/Teal100Light"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <EditText
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/loginPassword"
            android:layout_below="@+id/loginEmail"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/Teal100Light"
            android:background="@color/Teal100Light"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="New Button"
            android:id="@+id/loginButton"
            android:layout_below="@+id/loginPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/PinkAccent100" />

    </RelativeLayout>

</RelativeLayout>
