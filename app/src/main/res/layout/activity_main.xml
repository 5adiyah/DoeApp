    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/WhiteIconText"
        tools:context="com.example.guest.daughtersofeve.MainActivity">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/loginLogo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:src="@drawable/logo"
            />


        <EditText
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/loginName"
            android:layout_marginTop="350dp"
            android:backgroundTint="@color/GreyLight"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="Enter In Your Name"
            android:textColorHint="@color/GreyLight" />


