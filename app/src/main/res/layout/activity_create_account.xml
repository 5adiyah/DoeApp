<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guest.daughtersofeve.ui.CreateAccountActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/bg1"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="530dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/DarkTPurple"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/nameEditText"
                android:textColorHint="@color/WhiteIconText"
                android:textSize="11sp"
                android:backgroundTint="@color/WhiteIconText"
                android:inputType="textEmailAddress"
                android:hint="Name"/>


            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:id="@+id/emailEditText"
                android:textColorHint="@color/WhiteIconText"
                android:textSize="11sp"
                android:backgroundTint="@color/WhiteIconText"
                android:hint="Email"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:id="@+id/passwordEditText"
                android:textColorHint="@color/WhiteIconText"
                android:textSize="11sp"
                android:backgroundTint="@color/WhiteIconText"
                android:inputType="textPassword"
                android:fontFamily="sans-serif"
                android:hint="Password"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:id="@+id/confirmPasswordEditText"
                android:textColorHint="@color/WhiteIconText"
                android:textSize="11sp"
                android:backgroundTint="@color/WhiteIconText"
                android:inputType="textPassword"
                android:fontFamily="sans-serif"
                android:hint="Confirm Password"/>


            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/createUserButton"
                android:layout_marginTop="30dp"
                android:background="@color/WhiteIconText"
                android:text="Sign up"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? Log in here!"
                android:id="@+id/loginTextView"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:textColor="@color/WhiteIconText"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
