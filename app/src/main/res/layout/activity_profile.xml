<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guest.daughtersofeve.ProfileActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/backgrnd2"
        android:scaleType="matrix" />

    <!--<android.support.v7.widget.LinearLayoutCompat-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_alignParentEnd="true"-->
    <!--android:layout_marginLeft="50dp"-->
    <!--android:background="@color/WhiteIconText">-->
    <!--</android.support.v7.widget.LinearLayoutCompat>-->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/WhiteIconText"
        tools:context="com.example.guest.daughtersofeve.MainActivity">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/profileImg"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="-210dp"
            android:src="@drawable/profilepic2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOHN DOE"
            android:id="@+id/profileName"
            android:layout_below="@+id/profileImg"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-5dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/PinkAccent100"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOE MEMBER"
            android:id="@+id/profileMemberType"
            android:layout_below="@+id/profileName"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/GreyLight"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT"
            android:id="@+id/profileAbout"
            android:layout_below="@+id/profileMemberType"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/GreySecondaryText"
            android:textSize="18sp"
            android:letterSpacing="0.2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EVENTS"
            android:id="@+id/profileEvents"
            android:layout_below="@+id/profileAbout"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/GreySecondaryText"
            android:textSize="18sp"
            android:letterSpacing="0.2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHOTOS"
            android:id="@+id/profilePhotos"
            android:layout_below="@+id/profileEvents"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/GreySecondaryText"
            android:textSize="18sp"
            android:letterSpacing="0.2"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY TICKETS"
            android:id="@+id/profileTickets"
            android:layout_below="@+id/profilePhotos"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/GreySecondaryText"
            android:textSize="18sp"
            android:letterSpacing="0.2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY ACCOUNT"
            android:id="@+id/profileAccount"
            android:layout_below="@+id/profileTickets"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/GreySecondaryText"
            android:textSize="18sp"
            android:letterSpacing="0.2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN OUT"
            android:id="@+id/profileSignOut"
            android:layout_below="@+id/profileAccount"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/GreySecondaryText"
            android:textSize="18sp"
            android:letterSpacing="0.2"
            />


    </RelativeLayout>

</RelativeLayout>
